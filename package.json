    "@uni-helper/unocss-preset-uni": "^0.2.11",
    "@uni-helper/vite-plugin-uni-manifest": "^0.2.8",
    "@uni-helper/vite-plugin-uni-pages": "^0.3.16",
    "@vue/runtime-core": "^3.5.22",
    "dotenv": "^17.2.2",
    "eslint": "^9.36.0",
