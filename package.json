    "@uni-helper/uni-promises": "^0.2.1",
    "core-js": "^3.45.1",
    "dayjs": "^1.11.18",
    "pinia": "~3.0.3",
    "pinia-plugin-persist-uni": "^1.3.1",
    "postcss": "^8.4.32",
    "ramda": "^0.31.3",
    "sass": "1.77.8",
    "uni-ajax": "^2.6.0",
    "url-parse": "^1.5.10",
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
